{% extends 'partials/base.html.twig' %}
{% set page_number = page.title %}
{% set progress = page.collection(page.path) %}



{% block content %}
    {{ page.content }}

<h3> progress:{{ progress }}</h3>

    <div class="comic-block">
    {% for image in page.media.images %}
    
        <div class="comic-image" align="center">
            <a href="{{page_number + 1}}">{{ image.html }}</a>
        </div>
    
    {% endfor %}
    </div>


    <div id="navigation" align="center">
        <ul>
        <li>First</li>
        <li>
            {% if not progress.isFirst(page.path) %}
                <a class="nav nav-prev" href="{{ progress.nextSibling(page.path).url }}"> <i class="fa fa-chevron-left"></i></a>
            {% endif %}
        </li>

        <li>
            {% if not progress.isLast(page.path) %}
                <a class="nav nav-next" href="{{ progress.prevSibling(page.path).url }}"><i class="fa fa-chevron-right"></i></a>
            {% endif %}
        </li>
        <li>First</li>
    </div>

{% endblock %}